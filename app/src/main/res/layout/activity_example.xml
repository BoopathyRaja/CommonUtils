<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.br.commonutils.view.textview.TextView
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:fontMode="Normal"
        app:fontType="Roboto_Black" />

    <com.br.commonutils.view.textview.TextViewInfo
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:fontMode="Normal"
        app:fontType="Roboto_Light"
        app:hint="Hint"
        app:hintColor="@android:color/darker_gray"
        app:hintSize="12"
        app:value="@string/app_name"
        app:valueColor="@android:color/black"
        app:valueSize="20" />
</LinearLayout>