<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <com.br.commonutils.view.textview.TextView
        android:id="@+id/textViewInfo_textView_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_3"
        android:singleLine="false"
        android:textSize="14sp" />

    <com.br.commonutils.view.textview.TextView
        android:id="@+id/textViewInfo_textView_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:paddingLeft="@dimen/padding_3"
        android:paddingRight="@dimen/padding_3"
        android:paddingBottom="@dimen/padding_3"
        android:singleLine="false"
        android:textSize="12sp" />
</LinearLayout>