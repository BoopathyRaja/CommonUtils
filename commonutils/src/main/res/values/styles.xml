        <item name="android:windowBackground">@color/lightWindowBackground</item>
        <item name="android:textColorPrimary">@color/lightTextPrimary</item>
        <item name="android:textColorSecondary">@color/lightTextSecondary</item>
        <item name="android:textColorHint">@color/lightTextHint</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="android:windowBackground">@color/darkWindowBackground</item>
